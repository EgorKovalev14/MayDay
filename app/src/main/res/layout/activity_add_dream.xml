<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.AddNote"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/semibold"
        android:gravity="left"
        android:text="Новая мечта"
        android:textColor="@color/black_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNoteName"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:fontFamily="@font/semibold"
        android:hint="Название"
        android:inputType="textPersonName"
        android:lines="1"
        android:textColor="@color/black_text"
        android:textColorHint="@color/gray_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editTextNoteDescription"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="@font/semibold"
        android:hint="Описание"
        android:inputType="textPersonName"
        android:lines="1"
        android:textColor="@color/black_text"
        android:textColorHint="@color/gray_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/editTextNoteName"
        app:layout_constraintTop_toBottomOf="@+id/editTextNoteName" />

    <EditText
        android:id="@+id/editTextNoteTags"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="@font/semibold"
        android:hint="Теги"
        android:inputType="textPersonName"
        android:lines="1"
        android:textColor="@color/black_text"
        android:textColorHint="@color/gray_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/editTextNoteDescription"
        app:layout_constraintTop_toBottomOf="@+id/editTextNoteDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCreateNote"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/buttons"
        android:text="Создать мечту"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:srcCompat="@drawable/ic_back" />
</androidx.constraintlayout.widget.ConstraintLayout>